# ================================================
# متغيرات البيئة لنظام إدارة صالة حسام جم
# Environment Variables for Hossam Gym System
# ================================================

# Supabase Database Configuration
# إعدادات قاعدة بيانات Supabase
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Application Settings
# إعدادات التطبيق
VITE_APP_NAME="نظام إدارة صالة حسام جم"
VITE_APP_DESCRIPTION="نظام شامل لإدارة الصالات الرياضية"
VITE_APP_VERSION="1.0.0"

# API Configuration
# إعدادات API
VITE_API_BASE_URL=http://localhost:5173
VITE_API_TIMEOUT=30000

# Feature Flags
# مفاتيح المميزات
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_PRINTING=true
VITE_ENABLE_EXPORTS=true
VITE_ENABLE_NOTIFICATIONS=true

# Development Settings (فقط للتطوير)
VITE_DEV_MODE=true
VITE_SHOW_DEBUG_INFO=false
VITE_ENABLE_MOCK_DATA=false

# Security Settings
# إعدادات الأمان
VITE_ENABLE_AUTH=true
VITE_SESSION_TIMEOUT=3600000
VITE_MAX_LOGIN_ATTEMPTS=5

# Localization
# إعدادات اللغة
VITE_DEFAULT_LANGUAGE=ar
VITE_SUPPORTED_LANGUAGES=ar,en
VITE_DEFAULT_DIRECTION=rtl

# Performance Settings
# إعدادات الأداء
VITE_CACHE_TIMEOUT=300000
VITE_MAX_FILE_SIZE=10485760
VITE_PAGINATION_SIZE=20

# Business Settings
# إعدادات العمل
VITE_GYM_NAME="صالة حسام جم"
VITE_GYM_PHONE="+964-XXX-XXX-XXXX"
VITE_GYM_ADDRESS="العراق - بغداد"
VITE_DEFAULT_CURRENCY="IQD"
VITE_TAX_RATE=0.00

# File Upload Settings
# إعدادات رفع الملفات
VITE_MAX_IMAGE_SIZE=5242880
VITE_ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif,webp
VITE_UPLOAD_FOLDER=uploads

# Backup Settings
# إعدادات النسخ الاحتياطي
VITE_BACKUP_ENABLED=true
VITE_BACKUP_INTERVAL=86400000
VITE_MAX_BACKUPS=10

# Analytics (اختياري)
VITE_ANALYTICS_ENABLED=false
VITE_GOOGLE_ANALYTICS_ID=
VITE_MIXPANEL_TOKEN=

# Third Party Services (اختياري)
VITE_NOTIFICATION_SERVICE_URL=
VITE_SMS_SERVICE_URL=
VITE_EMAIL_SERVICE_URL=

# ================================================
